{
  "variables": {
    "do_api_token": "{{ env `PACKER_DO_TOKEN` }}"
  },
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_api_token`}}",
      "image": "ubuntu-18-04-x64",
      "region": "nyc3",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p /var/opt/seeder-app"
      ]
    },
    {
      "type": "file",
      "sources": [
        "go.mod",
        "go.sum",
        "main.go"
      ],
      "destination": "/var/opt/seeder-app"
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo apt-get install -y golang",
        "cd /var/opt/seeder-app",
        "go get",
        "go build main.go",
        "nohup ./main &"
      ]
    }
  ]
}
